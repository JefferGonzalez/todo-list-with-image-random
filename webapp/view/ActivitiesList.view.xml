<mvc:View
	controllerName="todolist.controller.ActivitiesList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
>
	<Panel
		id="activitiesPanel"
		expandable="true"
		headerText="{i18n>panelTitle}"
		width="auto"
		class="sapUiResponsiveMargin"
	>
		<content>
			<Button
				id="activitiesPanelButton"
				icon="sap-icon://activate"
				text="{i18n>btnChangeDisplayMode}"
				press=".onChangeDisplayMode"
			/>
		</content>
	</Panel>
	<List
		id="activitiesList"
		items="{characters>/}"
		width="auto"
		class="sapUiResponsiveMargin"
	>
		<headerToolbar>
			<core:Fragment
				id="activitiesListHeaderToolbar"
				fragmentName="todolist.view.fragments.HeaderToolBar"
				type="XML"
			/>
		</headerToolbar>
		<items>
			<ObjectListItem
				id="activitiesListItem"
				title="{characters>name}: {characters>status}"
			/>
		</items>
	</List>
	<Table
		id="activitiesTable"
		headerText="{i18n>activitiesTitle}"
		width="auto"
		class="sapUiResponsiveMargin"
		visible="false"
		items="{
			path: 'characters>/'
		}"
	>
		<headerToolbar>
			<core:Fragment
				id="activitiesTableHeaderToolbar"
				fragmentName="todolist.view.fragments.HeaderToolBar"
				type="XML"
			/>
		</headerToolbar>
		<columns>
			<Column
				id="activitiesTableColumnId"
				hAlign="Center"
				minScreenWidth="Small"
				demandPopin="true"
				width="5rem"
			>
				<Text
					id="activitiesTableColumnIdText"
					text="#"
				/>
			</Column>
			<Column id="activitiesTableColumnName">
				<Text
					id="activitiesTableColumnNameText"
					text="Name"
				/>
			</Column>
			<Column
				id="activitiesTableColumnStatus"
				minScreenWidth="Small"
				demandPopin="true"
			>
				<Text
					id="activitiesTableColumnStatusText"
					text="Status"
				/>
			</Column>
			<Column
				id="activitiesTableColumnSpecies"
				minScreenWidth="Tablet"
			>
				<Text
					id="activitiesTableColumnSpeciesText"
					text="Species"
				/>
			</Column>
			<Column
				id="activitiesTableColumnGender"
				hAlign="End"
			>
				<Text
					id="activitiesTableColumnGenderText"
					text="Gender"
				/>
			</Column>
			<Column
				id="activitiesTableColumnActions"
				hAlign="End"
			>
				<Text
					id="activitiesTableColumnActionsText"
					text="Actions"
				/>
			</Column>
		</columns>
		<items>
			<ColumnListItem id="activitiesTableColumnListItem">
				<cells>
					<ObjectNumber
						id="activitiesTableRowId"
						number="{characters>id}"
						emphasized="false"
					/>
					<ObjectIdentifier
						id="activitiesTableRowName"
						title="{characters>name}"
					/>
					<ObjectStatus
						id="activitiesTableRowStatus"
						text="{characters>status}"
						state="{= ${characters>status} !== 'Alive' ? 'Error' : 'Success' }"
					/>
					<Text
						id="activitiesTableRowSpecies"
						text="{characters>species}"
					/>
					<Text
						id="activitiesTableRowGender"
						text="{characters>gender}"
					/>
					<Button
						id="activitiesTableRowButton"
						icon="sap-icon://edit"
						type="Emphasized"
					/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>