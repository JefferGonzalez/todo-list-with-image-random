<mvc:View
	controllerName="todolist.controller.ActivitiesList"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m"
>
	<Panel
		id="activitiesPanel"
		expandable="true"
		headerText="{i18n>panelTitle}"
		width="auto"
		class="sapUiResponsiveMargin"
	>
		<content>
			<Button
				id="activitiesPanelButton"
				icon="sap-icon://activate"
				text="{i18n>btnChangeDisplayMode}"
				press=".onChangeDisplayMode"
			/>
		</content>
	</Panel>
	<List
		id="activitiesList"
		mode="SingleSelect"
		items="{activities>/}"
		width="auto"
		class="sapUiResponsiveMargin"
	>
		<headerToolbar>
			<core:Fragment
				id="activitiesListHeaderToolbar"
				fragmentName="todolist.view.fragments.HeaderToolBar"
				type="XML"
			/>
		</headerToolbar>
		<items>
			<StandardListItem
				icon="{activities>urlImage}"
				title="{activities>name}"
			/>
		</items>
	</List>
	<Table
		id="activitiesTable"
		headerText="{i18n>activitiesTitle}"
		width="auto"
		class="sapUiResponsiveMargin"
		visible="false"
		mode="SingleSelect"
		items="{
			path: 'activities>/'
		}"
	>
		<headerToolbar>
			<core:Fragment
				id="activitiesTableHeaderToolbar"
				fragmentName="todolist.view.fragments.HeaderToolBar"
				type="XML"
			/>
		</headerToolbar>
		<columns>
			<Column
				id="activitiesTableColumnId"
				hAlign="Center"
				minScreenWidth="Small"
				demandPopin="true"
				width="5rem"
			>
				<Text
					id="activitiesTableColumnIdText"
					text="#"
				/>
			</Column>
			<Column id="activitiesTableColumnName">
				<Text
					id="activitiesTableColumnNameText"
					text="Name"
				/>
			</Column>
			<Column
				id="activitiesTableColumnParticipants"
				minScreenWidth="Small"
				demandPopin="true"
			>
				<Text
					id="activitiesTableColumnParticipantsText"
					text="Participants"
				/>
			</Column>
			<Column
				id="activitiesTableColumnImage"
				minScreenWidth="Small"
				demandPopin="true"
			>
				<Text
					id="activitiesTableColumnImageText"
					text="Image"
				/>
			</Column>
		</columns>
		<items>
			<ColumnListItem id="activitiesTableColumnListItem">
				<cells>
					<ObjectNumber
						id="activitiesTableRowId"
						number="{activities>id}"
						emphasized="false"
					/>
					<ObjectIdentifier
						id="activitiesTableRowName"
						title="{activities>name}"
					/>
					<ObjectNumber
						id="activitiesTableRowStatus"
						number="{activities>participants}"
					/>
					<Image
						src="{activities>urlImage}"
						width="100px"
					/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>