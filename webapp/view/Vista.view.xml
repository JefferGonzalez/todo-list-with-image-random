<mvc:View
	controllerName="todolist.controller.Vista"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	busyIndicatorDelay="0"
>
	<Panel
		class="centerImage sapUiResponsivePadding--header"
		height="100%"
	>
		<Bar titleAlignment="Center">
			<contentMiddle>
				<Title
					level="Auto"
					text="Detalle"
					textAlign="Initial"
					titleStyle="Auto"
					width=""
					wrapping="false"
					wrappingType="Normal"
				/>
			</contentMiddle>
			<contentRight>
			</contentRight>
		</Bar>
		<content>
			<HBox
				class="center-horizontally"
				alignItems="Center"
				visible="{= !(${activity>/images} !== undefined)
					}"
			>
				<BusyIndicator size="3em"/>
			</HBox>
		</content>
		<content class="sapUiNoContentPadding">
			<!-- <List items="{nImg>/}">
				<items>
					<StandardListItem  icon="{nImg>url}"/>
				</items>
				
			</List> -->
			<Carousel
				id="carousel"
				width="50%"
				height="50%"
				class="centerImage"
				loop="true"
				visible="{= ${activity>/images} !== undefined}"
			>
				<Image
					id="vistaImage1"
					src="{activity>/images/0/url}"
					alt="{activity>/name}"
				/>
				<Image
					id="vistaImage2"
					src="{activity>/images/1/url}"
					alt="{activity>/name}"
				/>
				<Image
					id="vistaImage3"
					src="{activity>/images/2/url}"
					alt="{activity>/name}"
				/>
			</Carousel>
		</content>
		<content>
			<Text
				id="textVista"
				class="textCenter "
				renderWhitespace="false"
				text="{activity>/name}"
				textAlign="Center"
				textDirection="Inherit"
				width="100%"
				wrapping="true"
				wrappingType="Normal"
			/>
		</content>
		<content>
			<OverflowToolbar
				class="centerFooter border-none"
				visible="{= ${activity>/images} !== undefined}"
			>
				<content>
					<Button
						icon="sap-icon://heart"
						text="Add"
						type="Accept"
						press="onAddC"
					/>
					<Button
						text="Retry"
						icon="sap-icon://reset"
						type="Reject"
						press=".onFetchfn"
					/>
				</content>
			</OverflowToolbar>
		</content>
		<content>
			<List
				id="list"
				items="{activities>/}"
			>
				<CustomListItem>
					<VBox>
						<Image
							src="{activities>urlImage}"
							width="100px"
						/>
						<Text text="{activities>name}"/>
					</VBox>
				</CustomListItem>
			</List>
		</content>
	</Panel>
</mvc:View>