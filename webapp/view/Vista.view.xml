<mvc:View
	controllerName="todolist.controller.Vista"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	busyIndicatorDelay="0"
>
	<Panel
		class="centerImage sapUiResponsivePadding--header"
		height="100%"
	>
		<Bar titleAlignment="Center">
			<contentMiddle>
				<Title
					level="Auto"
					text="Detalle"
					textAlign="Initial"
					titleStyle="Auto"
					width=""
					wrapping="false"
					wrappingType="Normal"
				/>
				<Text
					renderWhitespace="false"
					text="-  Actividad:{nImg>/}"
					
				/>
			</contentMiddle>
			<contentRight>
			</contentRight>
		</Bar>
		<content class="sapUiNoContentPadding">
			
			<List items="{nImg>/}">
				<items>
					<ObjectListItem
				id="activitiesListItem"
				title="{nImg>url}: {nImg>url}"
			/>
				</items>
				<Image
					width="200px"
					class="centerImage sapUiSmallMarginBottom  sapUiSmallMarginTop"
					src="{nImg>data}"
				/>
			</List>
			
		</content>
		<content>
			<Text
				class="textCenter "
				renderWhitespace="false"
				text="{img>/activity}"
				textAlign="Center"
				textDirection="Inherit"
				width="100%"
				wrapping="true"
				wrappingType="Normal"
			/>
		</content>
		<content>
			<OverflowToolbar class="centerFooter border-none">
				<content>
					<Button
						icon="sap-icon://heart"
						text="Add"
						type="Accept"
					/>
					<Button
						text="Retry"
						icon="sap-icon://reset"
						type="Reject"
					/>
				</content>
			</OverflowToolbar>
		</content>
	</Panel>
</mvc:View>