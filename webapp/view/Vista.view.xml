<mvc:View
	controllerName="todolist.controller.Vista"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	height="100%"
	busyIndicatorDelay="0"
	xmlns="sap.m"
>
	<Panel
		width="50%"
		class="centerImage sapUiResponsivePadding--header"
	>
		<Bar
			design="Auto"
			titleAlignment="Center"
		>
			<contentMiddle>
				<Title
					level="Auto"
					text="Detalle"
					textAlign="Initial"
					titleStyle="Auto"
					width=""
					wrapping="false"
					wrappingType="Normal"
				/>
			</contentMiddle>
			<contentRight>
			</contentRight>
		</Bar>
		<content class="sapUiNoContentPadding">
			<Image
				width="200px"
				class="centerImage sapUiSmallMarginBottom  sapUiSmallMarginTop"
				src="{img>/message}"
			/>
		</content>
		<content>
			<Text
				class="textCenter "
				renderWhitespace="false"
				text="{img>/message}"
				textAlign="Center"
				textDirection="Inherit"
				width="100%"
				wrapping="true"
				wrappingType="Normal"
			/>
		</content>
		<content>
			<OverflowToolbar class=" centerFooter ">
				<content>
					<Button
						icon="sap-icon://heart"
						text="Add"
						type="Accept"
					/>
					<Button
						text="Retry"
						icon="sap-icon://reset"
						type="Reject"
					/>
				</content>
			</OverflowToolbar>
		</content>
	</Panel>
</mvc:View>