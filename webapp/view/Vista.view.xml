<mvc:View
	controllerName="todolist.controller.Vista"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	busyIndicatorDelay="0"
>
	<Panel
		class="centerImage sapUiResponsivePadding--header"
		height="100%"
	>
		<Bar titleAlignment="Center">
			<contentMiddle>
				<Title
					level="Auto"
					text="Detalle"
					textAlign="Initial"
					titleStyle="Auto"
					width=""
					wrapping="false"
					wrappingType="Normal"
				/>
			</contentMiddle>
			<contentRight>
			</contentRight>
		</Bar>
		<content class="sapUiNoContentPadding">
			<!-- <List items="{nImg>/}">
				<items>
					<StandardListItem  icon="{nImg>url}"/>
				</items>
				
			</List> -->
			<Carousel
			width="50%"
			height="50%"
				class="centerImage"
				loop="true"
			>
				<Image
					src="{nImg>/0/url}"
					alt="Example picture of USB flash drive"
				/>
			</Carousel>
		</content>
		<content>
			<Text
				class="textCenter "
				renderWhitespace="false"
				text="{img>/activity}"
				textAlign="Center"
				textDirection="Inherit"
				width="100%"
				wrapping="true"
				wrappingType="Normal"
			/>
		</content>
		<content>
			<OverflowToolbar class="centerFooter border-none">
				<content>
					<Button
						icon="sap-icon://heart"
						text="Add"
						type="Accept"
					/>
					<Button
						text="Retry"
						icon="sap-icon://reset"
						type="Reject"
					/>
				</content>
			</OverflowToolbar>
		</content>
	</Panel>
</mvc:View>