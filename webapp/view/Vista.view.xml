<mvc:View
	controllerName="todolist.controller.Vista"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	busyIndicatorDelay="0"
>
	<Panel
		class="centerImage sapUiResponsivePadding--header"
		height="100%"
	>
		<Bar titleAlignment="Center">
			<contentMiddle>
				<Title
					level="Auto"
					text="Detalle"
					textAlign="Initial"
					titleStyle="Auto"
					width=""
					wrapping="false"
					wrappingType="Normal"
				/>
			</contentMiddle>
			<contentRight>
			</contentRight>
		</Bar>
		<content>
			<HBox
			class="center-horizontally"
				alignItems="Center"
				visible="{= !(${activity>/urlImage} !== undefined)}"
			>
				<BusyIndicator size="3em"/>
			</HBox>
		</content>
		<content class="sapUiNoContentPadding">
			<!-- <List items="{nImg>/}">
				<items>
					<StandardListItem  icon="{nImg>url}"/>
				</items>
				
			</List> -->
			<Carousel
				width="50%"
				height="50%"
				class="centerImage"
				loop="true"
				visible="{= ${activity>/urlImage} !== undefined}"
			>
				<Image
					src="{activity>/urlImage}"
					alt="{activity>/name}"
				/>
			</Carousel>
		</content>
		<content>
			<Text
				class="textCenter "
				renderWhitespace="false"
				text="{activity>/name}"
				textAlign="Center"
				textDirection="Inherit"
				width="100%"
				wrapping="true"
				wrappingType="Normal"
			/>
		</content>
		<content>
			<OverflowToolbar
				class="centerFooter border-none"
				visible="{= ${activity>/urlImage} !== undefined}"
			>
				<content>
					<Button
						icon="sap-icon://heart"
						text="Add"
						type="Accept"
					/>
					<Button
						text="Retry"
						icon="sap-icon://reset"
						type="Reject"
						press=".onInit"
					/>
				</content>
			</OverflowToolbar>
		</content>
	</Panel>
</mvc:View>