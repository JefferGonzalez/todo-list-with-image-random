<mvc:View
	controllerName="todolist.controller.Home"
	xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true"
	xmlns="sap.f"
>
	<FlexibleColumnLayout
		backgroundDesign="Solid"
		layout="TwoColumnsBeginExpanded"
	>
		<beginColumnPages>
			<mvc:XMLView
				id="activityDetails"
				viewName="todolist.view.Vista"
			/>
		</beginColumnPages>
		<midColumnPages>
			<mvc:XMLView
				id="activitiesView"
				viewName="todolist.view.ActivitiesList"
			/>
		</midColumnPages>
	</FlexibleColumnLayout>
</mvc:View>