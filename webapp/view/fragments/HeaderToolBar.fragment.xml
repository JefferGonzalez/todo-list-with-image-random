<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Toolbar id="activitiesToolbar">
		<Title
			id="activitiesTitle"
			text="{i18n>activitiesTitle}"
		/>
		<ToolbarSpacer id="activitiesToolbarSpacer"/>
		<SearchField
			id="activitiesSearchField"
			placeholder="{i18n>searchField}"
			width="50%"
			search=".onFilter"
		/>
		<Button
			icon="sap-icon://sort"
			tooltip="{i18n>sorter}"
			type="Transparent"
			press=".onSort"
		/>
	</Toolbar>
</core:FragmentDefinition>